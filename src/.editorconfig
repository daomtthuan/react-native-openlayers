root                     = true

# All files
[*]
indent_style             = space
indent_size              = 2
end_of_line              = lf
charset                  = utf-8
trim_trailing_whitespace = false
insert_final_newline     = true
max_line_length          = 160
quote_type               = single
curly_bracket_next_line  = false
spaces_around_operators  = true
spaces_around_brackets   = true
indent_brace_style       = K&R

# Windows files
[*.bat]
end_of_line = crlf
