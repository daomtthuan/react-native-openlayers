{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "jsx": "react-native",
    "lib": ["ESNext"],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": false,
    "strict": true
  },
  "exclude": ["node_modules", "babel.config.js", "metro.config.js", "react-native.config.js", "webpack.config.js"]
}
